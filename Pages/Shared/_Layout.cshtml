<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0" />
    <title>@ViewData["Title"] - Cliff Andersen</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body style="background: #2b2b2b">
    <header style="overflow:auto">
        <div class="container" style="max-height:275px; max-width:1920px; position:absolute; padding-left:0px; padding-right:0px">
            <img src="~/images/pfp_placeholder.png" class="img-fluid" alt="Image text here" style="z-index:2; position:absolute; right:15%; margin-top:7.5%">
            <h1 style="z-index:3; position:absolute; color: #ffffff; font-weight:bold; font-size:larger; right: 29%; margin-top: 12%">Cliff Andersen</h1>
        </div>
        <div class="container" style="position:absolute; top: 29.5%; padding-left:0px; padding-right:0px">
            <div class="row">
                <div class="col-5">
                    <ul class="nav flex-column nav-pills nav-justified" id="buttons" style="background: #1e1e1e; font-weight:bold; text-align:center">
                        <li>
                            <a class="nav-link layout_buttons" id="button_om_mig" role="button" asp-area="" asp-page="/Om_mig/Index">Om mig</a>
                        </li>
                        <li>
                            <a class="nav-link layout_buttons" id="button_projekter" role="button" asp-area="" asp-page="/Projekter/Index">Projekter</a>
                        </li>
                        <li>
                            <a class="nav-link layout_buttons" id="button_fritid" role="button" asp-area="" asp-page="/Fritid/Index">Fritid</a>
                        </li>
                        <li>
                            <a class="nav-link layout_buttons" id="button_fritid" role="button" asp-area="" asp-page="/Kontakt/Index">Kontakt</a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="footer footer_stuff">
            <h5 style="font-size: 75%;">E-mail: DovahViking@hotmail.com</h5>
        </div>
    </header>
    <div>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
